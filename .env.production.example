# =====================================================
# CVSelecto - PRODUCTION Environment Configuration
# =====================================================
# 
# Instrucciones:
# 1. Copiar este archivo a .env.production en el servidor
# 2. Reemplazar TODOS los valores X con valores reales
# 3. Ejecutar: php artisan key:generate --force
# 4. Ejecutar: php artisan jwt:secret (si usa JWT)
# 5. Proteger: chmod 600 .env.production
# 6. NO commitear a git
#
# =====================================================

# APP CONFIGURATION
APP_NAME=CVSelecto
APP_ENV=production
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tu-dominio.com
APP_TIMEZONE=America/Argentina/Buenos_Aires

# DATABASE CONFIGURATION
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cvselecto_produccion
DB_USERNAME=usuario_produccion
DB_PASSWORD=contraseña_segura_produccion
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# CACHE & SESSION
CACHE_DRIVER=file
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# SANCTUM / AUTH
SANCTUM_STATEFUL_DOMAINS=tu-dominio.com
SESSION_DOMAIN=tu-dominio.com

# API URLs
API_URL=https://tu-dominio.com/api
FRONTEND_URL=https://tu-dominio.com

# EMAIL (Mailgun / SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=tu_usuario
MAIL_PASSWORD=tu_contraseña
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tu-dominio.com
MAIL_FROM_NAME="CVSelecto"

# FILE STORAGE
FILESYSTEM_DRIVER=local
# Si usas S3, descomentar:
# FILESYSTEM_DRIVER=s3
# AWS_ACCESS_KEY_ID=tu_key
# AWS_SECRET_ACCESS_KEY=tu_secret
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=tu_bucket

# LOGGING
LOG_CHANNEL=stack
LOG_LEVEL=warning

# JWT / OAUTH (si aplica)
JWT_SECRET=GENERAR_CON_php_artisan_jwt:secret

# QUEUE (opcional)
QUEUE_CONNECTION=sync
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=usuario_mail
MAIL_PASSWORD=contraseña_mail
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@tu-dominio.com
MAIL_FROM_NAME="CVSelecto"

# JWT/Secret
JWT_SECRET=REEMPLAZAR_POR_JWT_SECRET
