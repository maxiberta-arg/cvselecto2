# .env.production.example
# Copia este archivo a `.env.production` y rellena valores reales en el servidor de producción.

APP_NAME=CVSelecto
APP_ENV=production
APP_KEY=base64:REEMPLAZAR_POR_APP_KEY
APP_DEBUG=false
APP_URL=https://tu-dominio.com

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nombre_db_produccion
DB_USERNAME=usuario_db
DB_PASSWORD=contraseña_db

SANCTUM_STATEFUL_DOMAINS=tu-dominio.com
SESSION_DOMAIN=tu-dominio.com

MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=usuario_mail
MAIL_PASSWORD=contraseña_mail
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@tu-dominio.com
MAIL_FROM_NAME="CVSelecto"

# JWT/Secret
JWT_SECRET=REEMPLAZAR_POR_JWT_SECRET
